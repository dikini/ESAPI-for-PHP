<?xml version="1.0"?>
<project basedir="." default="eclipse-plugin_zip">
	
	<property name="app.name" value="simpletest"/>
	<property file="${basedir}/makephpzip.properties"/>
	<!--override in default.properties-->
	<property name="dist.dir" value="."/>
	<property name="src.dir" value="."/>
	
    <!-- zips up project -->
    <target name="eclipse-plugin_zip" >

        <zip zipfile="${dist.dir}/${app.name}_php.zip">
            <fileset dir="${src.dir}">
                <include name="*.php"/>
            	<include name="LICENSE"/>
            	<include name="VERSION"/>
            </fileset>
        </zip>
    	
    	<copy file="${src.dir}/VERSION" tofile="${dist.dir}/SIMPLETEST_PHP_VERSION.txt"/>
   
    </target>

</project>
